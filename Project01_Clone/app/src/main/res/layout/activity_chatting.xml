<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ChattingActivity"
    android:orientation="vertical"
    android:background="#83B7C6">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/arrow_left"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_chatting_name"
            android:text="친구이름"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_weight="7"
            android:layout_width="wrap_content"
            android:layout_height="25dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_search"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageView
                android:src="@drawable/icon_box"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageView
                android:src="@drawable/icon_burger"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container"/>
    </ScrollView>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="#E0E5EA"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/icon_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/edt_chatting"
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
    </LinearLayout>


</LinearLayout>